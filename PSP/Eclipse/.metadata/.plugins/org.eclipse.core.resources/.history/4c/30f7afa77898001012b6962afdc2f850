package prueba;

import java.util.Scanner;

public class Suma {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int n1 = sc.nextInt();
		int n2 = sc.nextInt();
		Suma(n1, n2);
	}

	public static void Suma(int n1, int n2) {
		int resultado = 0;

		for (int i = 0; i < n2; i++) {
			resultado += i;
		}
		System.out.println(resultado);
	}
}
